{
  "name": "@libchrono/duration",
  "version": "1.0.3",
  "description": "Small library to handle durations parsing and displaying.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/"
  ],
  "author": "Damian Wile≈Ñski",
  "license": "MIT",
  "repository": {
    "url": "https://github.com/damianw27/libchrono.git"
  },
  "keywords": [
    "duration",
    "parser",
    "validator",
    "time",
    "string",
    "parse",
    "validate",
    "math",
    "operations",
    "weeks",
    "days",
    "hours",
    "minutes",
    "seconds",
    "milliseconds"
  ],
  "scripts": {
    "build:grammar": "antlr4 -Dlanguage=TypeScript -o src/generated ./src/antlr/Duration.g4 -visitor",
    "build:lib": "webpack && tsc-alias -p tsconfig.json",
    "build:types": "tsc --emitDeclarationOnly && tsc-alias -p tsconfig.json",
    "build:all": "bun run build:lib && bun run build:types",
    "test": "jest",
    "coverage": "bun run test --coverage && make-coverage-badge",
    "doc:generate": "typedoc ./src/index.ts",
    "doc:deploy": "gh-pages -d docs",
    "deploy": "bun run test && bun run build:all && npm publish"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^18.15.3",
    "@typescript-eslint/eslint-plugin": "5.61.0",
    "@typescript-eslint/parser": "5.61.0",
    "antlr4-cli": "^4.5.3",
    "eslint": "8.44.0",
    "eslint-config-crystal": "^0.0.8",
    "eslint-config-prettier": "8.8.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-check-file": "2.5.0",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-max-params-no-constructor": "0.0.4",
    "eslint-plugin-prettier": "^5.0.0-alpha.1",
    "eslint-webpack-plugin": "^4.0.1",
    "jest": "^29.5.0",
    "make-coverage-badge": "^1.2.0",
    "node": "^19.8.1",
    "prettier": "3.0.0",
    "terser-webpack-plugin": "^5.3.7",
    "ts-jest": "^29.0.5",
    "ts-loader": "^9.4.2",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.8.4",
    "tsconfig-paths-webpack-plugin": "^4.0.1",
    "typedoc": "^0.24.4",
    "typescript": "^5.0.4",
    "webpack": "^5.80.0",
    "webpack-cli": "^5.0.2"
  },
  "dependencies": {
    "@libchrono/time": "^1.2.1",
    "antlr4": "^4.13.2",
    "assert": "^2.0.0",
    "util": "^0.12.5"
  }
}
