{
	"name": "@libchrono/duration",
	"version": "1.0.5",
	"description": "Small library to handle durations parsing and displaying.",
	"exports": {
		".": {
			"types": "./dist/types/index.d.ts",
			"import": "./dist/browser/index.js"
		},
    "./node": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/node/index.js"
    }
  },
	"files": [
		"dist/"
	],
	"author": "Damian Wile≈Ñski",
	"license": "MIT",
	"repository": {
		"url": "https://github.com/damianw27/libchrono-duration.git"
	},
	"keywords": [
		"duration",
		"parser",
		"validator",
		"time",
		"string",
		"parse",
		"validate",
		"math",
		"operations",
		"weeks",
		"days",
		"hours",
		"minutes",
		"seconds",
		"milliseconds"
	],
	"scripts": {
		"clean": "shx rm -rf dist",
		"build:grammar": "antlr4 -Dlanguage=TypeScript -o src/generated ./src/antlr/Duration.g4 -visitor",
		"build:node:esm": "bun build src/index.ts --outdir=dist/node --format=esm --target=node --minify",
		"build:node:cjs": "bun build src/index.ts --outdir=dist/node --format=cjs --target=node --minify --outfile=dist/index.cjs",
		"build:browser:esm": "bun build src/index.ts --outdir=dist/browser --format=esm --target=browser",
		"build:browser:esm:min": "bun build src/index.ts --outdir=dist/browser --format=esm --target=browser --minify --outfile=dist/browser/index.min.js",
		"build:types": "tsc --emitDeclarationOnly -p tsconfig.build.json && tsc-alias -p tsconfig.build.json",
		"build": "bun run clean && bun run build:node:esm && bun run build:node:cjs && bun run build:browser:esm && bun run build:browser:esm:min && bun run build:types",
		"coverage": "bun test --coverage --coverage-reporter=lcov",
		"doc:generate": "typedoc ./src/index.ts",
		"doc:deploy": "gh-pages -d docs",
		"deploy": "bun run test && bun run build:all && npm publish"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.11",
		"@types/bun": "latest",
		"antlr4-cli": "^4.5.3",
		"lcov-badge2": "^1.1.3",
		"make-coverage-badge": "^1.2.0",
		"shx": "^0.4.0",
		"tsc-alias": "^1.8.4",
		"typedoc": "^0.24.4",
		"typescript": "^5.9.3"
	},
	"dependencies": {
		"@libchrono/time": "^1.2.1",
		"antlr4": "^4.13.2"
	}
}
